      <!-- Left side column. contains the sidebar -->
      <aside class="main-sidebar">
        <!-- sidebar: style can be found in sidebar.less -->
        <section class="sidebar">
          <!-- Sidebar user panel -->
          <div class="user-panel">
            <div class="pull-left image">
              <img src="https://cdnjs.cloudflare.com/ajax/libs/admin-lte/2.3.11/img/avatar3.png" class="img-circle" alt="User Image">
            </div>
            <div class="pull-left info">
              <p>{% if app.user != null %}
		            	{{app.user.name}} {{app.user.surname}}
		            {% endif %}</p>
              <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
            </div>
          </div>
          
          <!-- /.search form -->
          <!-- sidebar menu: : style can be found in sidebar.less -->
          <ul class="sidebar-menu">
            <li class="header">MAIN NAVIGATION</li>
            <li class="treeview">
              <a href="{{path("blog_contactos")}}">
                <i class="fa fa-dashboard"></i> <span>Contactos</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>

            <li class="treeview">
              <a href="{{path("blog_testdrives")}}">
                <i class="fa fa-dashboard"></i> <span>Testdrives</span> <i class="fa fa-angle-left pull-right"></i>
              </a>
            </li>
            
          </ul>
        </section>
        <!-- /.sidebar -->
      </aside>

