{% extends 'BlogBundle::layout.html.twig' %}

{% block content %}

	{#{% if app.user != null %}
		{{dump(app.user)}}	
	{% endif %}#}


	{% if is_granted('ROLE_USER') %}
		<strong>
			Estas logueado como usuario normal
		</strong>	
	{% endif  %}

	{% if is_granted('ROLE_ADMIN') %}
		<strong>
			Estas logueado como usuario administrador todopoderoso
		</strong>	
	{% endif %}
	

	<div class="container">

		<div class="row">
 
			<div class="col-xs-6">
				<h2>Identidicate</h2>
				<hr>
				<form action="{{path("login_check")}}" method="post" >
					 <div class="form-group">
					    <label for="email">Email</label>
					    <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}">
					  </div>
					  <div class="form-group">
					    <label for="password">Password:</label>
					    <input type="password" class="form-control" id="password" name="_password">
					  </div>

					  <input type="submit" value="Entrar" class="btn btn-success"/>
					  <input type="hidden" name="_target_path" value="/login">
				</form>

			</div>


			<div class="col-xs-6">
				<h2>Registrate</h2>
				<hr>
				<!-- Mostramos el mensaje del flash -->
				{% for message in app.session.flashbag().get('status') %}
				    <div class="alert alert-success">
				    	{{message}}
				    </div>
				{% endfor %}
				{{form_start(form)}}
				{{form_end(form)}}
			</div>

		</div>

	</div>



	
    
{% endblock %}